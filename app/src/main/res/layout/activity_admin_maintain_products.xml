<?xml version="1.0" encoding="UTF-8"?>

    <androidx.cardview.widget.CardView tools:context=".Admin.AdminMaintainProductsActivity" app:cardElevation="15dp" android:layout_marginBottom="5dp" android:layout_marginEnd="15dp" android:layout_marginStart="15dp" android:layout_marginTop="20dp" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">

    <ImageView android:layout_marginTop="2dp"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_below="@+id/product_name"
        android:id="@+id/product_image_maintain"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_image_maintain"
        android:id="@+id/product_name_maintain"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/input_design"
        android:layout_margin="5dp"
        android:padding="12dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:hint="Product Name"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_name_maintain"
        android:id="@+id/product_price_maintain"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/input_design"
        android:layout_margin="5dp"
        android:padding="12dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:hint="Product Price"/>

    <EditText android:layout_marginTop="2dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@+id/product_price_maintain" android:id="@+id/product_description_maintain" android:textColor="@color/colorPrimaryDark" android:background="@drawable/input_design" android:layout_margin="5dp" android:padding="12dp" android:textSize="16dp" android:textAlignment="center" android:hint="Product Description"/>

    <Button android:layout_marginTop="2dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@+id/product_description_maintain" android:id="@+id/apply_changes_btn" android:textColor="@android:color/white" android:background="@drawable/buttons" android:layout_margin="5dp" android:padding="12dp" android:textSize="18dp" android:textAlignment="center" android:text="Apply Changes"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/apply_changes_btn"
        android:id="@+id/delete_product_btn"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        android:layout_margin="20dp"
        android:padding="12dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Delete This Product"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>